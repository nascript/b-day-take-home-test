generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  birthday  DateTime
  timezone  String
  email     String
  messages  MessageLog[]
  createdAt DateTime @default(now()) 
  updatedAt DateTime @updatedAt       
}

model MessageLog {
  id            Int      @id @default(autoincrement())
  userId        Int
  status        String
  scheduledTime DateTime
  sentTime      DateTime?

  user User @relation(fields: [userId], references: [id])
}
